@{
    ViewData["Title"] = "Página não encontrada";
}

<div class="container error-container text-center">
    <div class="error-code">404</div>
    <h1 class="error-message">Página Não Encontrada</h1>
    <p class="lead text-muted">
        Desculpe, a página que você está procurando não existe ou foi movida.
    </p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-4">Voltar para a Página Inicial</a>
</div>