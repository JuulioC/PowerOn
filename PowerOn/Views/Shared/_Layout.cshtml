@using System.Security.Claims // Adicione este using para trabalhar com Claims
@using PowerOn.Models // Para acessar o modelo Usuario, se necessário para a imagem

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - PowerOn</title>
    <link rel="stylesheet" href="~/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/assets/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/assets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="shortcut icon" href="~/assets/images/favicon.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" xintegrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/custom.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="sidebar-fixed">
    <div class="container-scroller">
        <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo" asp-controller="Home" asp-action="Index">
                    <img class="w-50" src="~/assets/images/PowerOn_Logo_Transparent.png" alt="logo" />
                </a>
                <a class="navbar-brand brand-logo-mini" asp-controller="Home" asp-action="Index">
                    <img class="w-50" src="~/assets/images/PowerOn_Icon.png" alt="logo" />
                </a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-stretch">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="fas fa-bars"></span>
                </button>
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="nav-profile-img">

                                <img src="@Url.Action("ProfileImage", "Account")"
                                     onerror="this.onerror=null; this.src='/assets/images/UserImage.png';"
                                     alt="imagem de perfil">

                            </div>
                            <div class="nav-profile-text">
                                <p class="mb-1 text-black">@(User.FindFirst(ClaimTypes.Name)?.Value ?? "Usuário")</p>
                            </div>
                        </a>
                        <div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">
                            <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                <i class="fas fa-user me-2 text-success"></i> Perfil
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                <i class="fas fa-right-from-bracket me-2 text-primary"></i> Sair
                            </a>
                        </div>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="fas fa-bars"></span>
                </button>
            </div>
        </nav>
        <div class="container-fluid page-body-wrapper">
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Atendimento" asp-action="Novo">
                            <span class="menu-title">Novo Atendimento</span>
                            <i class="fas fa-plus menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <span class="menu-title">Agenda</span>
                            <i class="fas fa-calendar-days menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Configuracoes" asp-action="Index">
                            <span class="menu-title">Configurações</span>
                            <i class="fas fa-gears menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Clientes" asp-action="Index">
                            <span class="menu-title">Clientes</span>
                            <i class="fas fa-users menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="collapse" href="#cadastro-submenu" aria-expanded="false" aria-controls="cadastro-submenu">
                            <span class="menu-title">Cadastro</span>
                            <i class="menu-arrow"></i>
                            <i class="fas fa-file-pen menu-icon"></i>
                        </a>
                        <div class="collapse" id="cadastro-submenu">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" asp-controller="Familias" asp-action="Index">Familias</a></li>
                                <li class="nav-item"> <a class="nav-link" asp-controller="Modelos" asp-action="Index">Modelos</a></li>
                                <li class="nav-item"> <a class="nav-link" asp-controller="Marcas" asp-action="Index">Marcas</a></li>
                                <li class="nav-item"> <a class="nav-link" asp-controller="Grupos" asp-action="Index">Grupos</a></li>
                                <li class="nav-item"> <a class="nav-link" asp-controller="Empresas" asp-action="Index">Empresas</a></li>
                                <li class="nav-item"> <a class="nav-link" asp-controller="Revisoes" asp-action="Index">Revisões</a></li>
                                <li class="nav-item"> <a class="nav-link" asp-controller="Pacotes" asp-action="Index">Pacotes</a></li>
                                <li class="nav-item"> <a class="nav-link" asp-controller="Produtos" asp-action="Index">Produtos</a></li>
                                <li class="nav-item"> <a class="nav-link" asp-controller="Usuarios" asp-action="Index">Usuários</a></li>
                                <li class="nav-item"> <a class="nav-link" asp-controller="Perfis" asp-action="Index">Perfis</a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Relatorios" asp-action="Index">
                            <span class="menu-title">Relatórios</span>
                            <i class="fas fa-chart-pie menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Logout">
                            <span class="menu-title">Sair</span>
                            <i class="fas fa-right-from-bracket menu-icon"></i>
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        @RenderBody()
                    </div>
                </div>
                <footer class="footer">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted text-center text-sm-left d-block d-sm-inline-block"><a href="https://www.maxmobility.com.br" target="_blank">Maxmobility © @DateTime.Now.Year</a></span>
                        <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center text-opacity-50">
                            v - @(VersionHelper.GetVersion())
                        </span>
                    </div>
                </footer>
            </div>
        </div>
    </div>
    <script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/assets/vendors/chart.js/chart.umd.js"></script>
    <script src="~/assets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="~/assets/js/off-canvas.js"></script>
    <script src="~/assets/js/misc.js"></script>
    <script src="~/assets/js/settings.js"></script>
    <script src="~/assets/js/todolist.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
