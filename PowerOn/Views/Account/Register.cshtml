@model PowerOn.Models.RegisterViewModel
@{
    Layout = null; // Ou use seu layout padrão se preferir (ex: Layout = "_Layout";)
    ViewData["Title"] = "Cadastro de Usuário";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - PowerOn</title>
    <link rel="stylesheet" href="~/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="shortcut icon" href="~/assets/images/favicon.png" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo text-center">
                                <img class="w-75" src="~/assets/images/PowerOn_Logo_Transparent.png" alt="logo" />
                            </div>
                            <h6 class="font-weight-light text-center">Crie sua conta para começar.</h6>

                            <!-- Formulário de Cadastro -->
                            <form class="pt-3" asp-controller="Account" asp-action="Register" method="post">
                                <!-- Exibe mensagens de validação do modelo (erros gerais) -->
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <!-- Campo Nome -->
                                <div class="form-group">
                                    <input asp-for="Nome" class="form-control form-control-lg" placeholder="Nome Completo">
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>

                                <!-- Campo Email -->
                                <div class="form-group">
                                    <input asp-for="Email" class="form-control form-control-lg" placeholder="Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <!-- Campo Senha -->
                                <div class="form-group">
                                    <input asp-for="Password" class="form-control form-control-lg" placeholder="Senha">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <!-- Campo Confirmar Senha -->
                                <div class="form-group">
                                    <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="Confirmar Senha">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                                <!-- Campos opcionais (Perfil, EmpresaId, CodigoSistema) - Você pode adicionar selects ou inputs ocultos -->
                                <!-- Exemplo de campo de Perfil (pode ser um select com opções) -->
                                <div class="form-group">
                                    <input asp-for="Perfil" class="form-control form-control-lg" placeholder="Perfil (Ex: 1 para Usuário)">
                                    <span asp-validation-for="Perfil" class="text-danger"></span>
                                </div>
                                <!-- Exemplo de campo de EmpresaId -->
                                <div class="form-group">
                                    <input asp-for="EmpresaId" class="form-control form-control-lg" placeholder="ID da Empresa (Ex: 1)">
                                    <span asp-validation-for="EmpresaId" class="text-danger"></span>
                                </div>
                                <!-- Exemplo de campo de CodigoSistema -->
                                <div class="form-group">
                                    <input asp-for="CodigoSistema" class="form-control form-control-lg" placeholder="Código do Sistema (Opcional)">
                                    <span asp-validation-for="CodigoSistema" class="text-danger"></span>
                                </div>


                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-sm btn-gradient-primary btn-lg font-weight-medium auth-form-btn w-100">CADASTRAR</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Já tem uma conta? <a asp-controller="Login" asp-action="Index" class="text-primary">Faça login</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/assets/js/misc.js"></script>
    <partial name="_ValidationScriptsPartial" /> <!-- Necessário para validação no lado do cliente -->
</body>
</html>
